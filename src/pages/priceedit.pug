    #applyDiscount.modal.fade(tabindex="-1" aria-labelledby="applyDiscountLabel" aria-hidden="true")
      .modal-dialog.modal-sm
        .modal-content
          .modal-header
            h5.modal-title Apply Discount
            button.btn-close(type="button" data-bs-dismiss="modal" aria-label="Close")
          .modal-body
            form.needs-validation(novalidate)
