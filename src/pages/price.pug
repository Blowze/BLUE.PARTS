extends components/common/layout

block header
  include components/common/header/header-inner
block content
  #modalAddItem.modal.fade(tabindex="-1" aria-labelledby="modalAddItemLabel" aria-hidden="true")
    .modal-dialog
      .modal-content
        .modal-header
          h5.modal-title ADD NEW PRICELIST
          button.btn-close(type="button" data-bs-dismiss="modal" aria-label="Close")
        .modal-body
          form.needs-validation(novalidate)
            .form-group.mb-3
              .row.align-items-center
                .col.col-4 
                  label Name Pricelist:
                .col.col-8
                  input.form-control(type="text")
            .form-group.mb-3
              .row.align-items-center
                .col.col-4 
                  label Warehouse:
                .col.col-8
                  select.form-select(aria-label="Default select example")
                    option(selected) Select
                    option(value="1") English
                    option(value="1") ไทย
            .form-group.mb-3
              .row.align-items-center
                .col.col-4 
                  label Market:
                .col.col-8
                  select.form-select(aria-label="Default select example")
                    option(selected) Select
                    option(value="1") English
                    option(value="1") ไทย
            .form-group.mb-3
              .row.align-items-center
                .col.col-4 
                  label Stock Availability:
                .col.col-8
                  select.form-select(aria-label="Default select example")
                    option(selected) Select
                    option(value="1") English
                    option(value="1") ไทย
            .form-group.mb-3
              .row.align-items-center
                .col.col-4 
                  label Currency:
                .col.col-8
                  select.form-select(aria-label="Default select example")
                    option(selected) Select
                    option(value="1") English
                    option(value="1") ไทย
            .form-group.mb-2
              .row.align-items-center
                .col.col-4 
                  label.mb-2 Select File
                .col.col-8
                  input#formFile.form-control(type='file')
            hr
          .d-flex.justify-content-end.gap-2
            a.btn.btn-primary(href="#") Upload pricelist
  main.main.pt-3.pt-md-5
    .container
      .d-flex.justify-content-between.align-items-center
        h2 Price
        a.btn.btn-primary(href="#" data-bs-toggle="modal" data-bs-target="#modalAddItem") NEW PRICELIST
      hr
      .table-wrap
        table#priceTable.mb-4.mt-1.table.table-striped.table-bordered.responsive.nowrap.dataTable-load
          thead
            tr
              th №
              th Date:
              th Price List name
              th
                .text-center Warehouse
              th Type
              th Availability
              th
                .text-center Total Items
              th
                .text-center Status:
              
          tbody
            tr
              td 1
