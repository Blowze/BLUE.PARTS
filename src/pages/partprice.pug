                label.d-flex.align-items-center
                  input.form-check-input.mt-0(type="radio" name="sort" value="" aria-label="Radio button for following text input")
                  span.mx-2 Rating
                hr
                .d-flex.gap-2.align-items-center
                  a.btn.btn-primary.w-100 Search
                  a.btn.btn-outline-danger.w-25
                    .bi.bi-x

        .col.col-12.col-lg-9
          h4.mt-2 GENUINE
          hr
          table#partpriceTable.mb-3.table.table-striped.nowrap.dataTable-load
