              tr
                th Part Number
                th Description
                th Brand
                th Stock
                th Waiting
                th Price
                th Order
            tbody
              -for (var x = 0; x < 30; x++)
                tr
                  td 
                    a(href="#") 3570533030
                  td GEAR SUB-ASSY,  COUNTER DRIVEN
                  td TOYOTA 
                  td
                    .d-flex.align-items-center >50
                      .fs-7.ms-2.text-muted (plc)
                  td 3
                  td 26193.6 THB
                  td.text-end
                    .d-flex.justify-content-end
                      a.btn.btn-outline-primary.btn-sm(type="button" data-bs-toggle="dropdown" aria-expanded="false")
                        .bi.bi-cart-plus.fs-7
                      .dropdown-menu.add-to-cart.p-0.border-0.fs-7
                        .card
                          .card-header.px-2.py-2.fw-bold 3570533030
                          .card-body.px-2.py-2
                            .mb-1.text-truncate GEAR SUB-ASSY,  COUNTER DRIVEN
                            .text-secondary Mfg: TOYOTA
                            hr.mb-2.mt-2
