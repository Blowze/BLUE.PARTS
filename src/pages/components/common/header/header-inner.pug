header.w-100
  .navbar.navbar-expand-lg.bg-dark.py-1
    .container
      ul.nav.ms-auto.fs-7
        li.nav-item.dropdown
          a#navbarDarkDropdownMenuLink.nav-link.link-light.px-3.py-0.dropdown-toggle(href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false") Language
          ul.dropdown-menu(aria-labelledby="navbarDarkDropdownMenuLink")
            li
              a.dropdown-item(href="") English
            li
              a.dropdown-item(href="") ไทย
        li.nav-item
          a.nav-link.link-light.px-3.py-0(href="#")  Company
        li.nav-item
          a.nav-link.link-light.px-3.py-0.pe-0(href="#") Help
  .py-0.py-md-2.bg-primary
    .navbar.navbar-expand-lg
      .container.d-block
        .row.align-items-center
          .col-6.col-lg-3
            a.navbar-brand.me-auto(href="/")
              em.h5.fw-bold.text-white(th:text="#{logo.text}") BLUE.PARTS
          .col-6.d-none.d-lg-block
            .d-flex.position-relative.search
              select.form-select.w-auto.pe-5.fs-7(aria-label="Default select example")
                option(selected th:text="#{main_page.car_model}") Part Number
                option(value="1" th:text="#{main_page.vin}") VIN
              .input-group
                input.form-control.pe-5.fs-7.py-2(type="text" placeholder="Enter part number 90915-YZZF2" aria-label="Amount (to the nearest dollar)" th:placeholder="#{_.placeholder.search-form.vin}")
              button.btn.btn-primary.btn-sm.position-absolute.top-50.translate-middle-y.end-0.me-1
                i.bi.bi-search
          .col-6.col-lg-3
            .d-flex.justify-content-end
              a.me-5.position-relative.d-none.d-md-block(href="/")
                i.bi.bi-shop.text-light.fs-3
                span.badge.bg-danger.position-absolute.end-0.badge-basket 1
              a.me-5.position-relative.d-none.d-md-block(href="/")
                i.bi.bi-cart2.text-light.fs-3
                span.badge.bg-danger.position-absolute.end-0.badge-basket 3
              .d-flex.d-md-none
                a.d-block.position-relative.me-3(href="")
                  i.bi.bi-cart2.fs-2.text-light
                  span.badge.bg-danger.position-absolute.end-0.badge-basket 3
                a.d-block(href="" data-bs-toggle="modal" data-bs-target="#modalMenu")
                  i.bi.bi-justify.fs-1.text-light
              .dropdown.dropstart.user-dropdown.d-none.d-md-block
                d-block#dropdownMenu2.dropdown-toggle(data-bs-toggle="dropdown" aria-expanded="false")
                  i.bi.bi-person-circle.text-light.fs-3
                ul.dropdown-menu.pt-0.me-2(aria-labelledby="dropdownMenu2")
                  div(sec:authorize="isAuthenticated()")
                    li.py-1
                      a.dropdown-item(href="/profile/me.html" th:href="${lang_prefix} + @{/profile/me}")
                        span.d-block(sec:authentication="principal.username") Алексей Крайнов
                        span.fs-7.d-block.text-secondary(sec:authentication="principal.email") krainovlife@gmail.com
                    li
                      a.dropdown-item(th:href="@{/logout(lang=${lang})}")
                        .d-flex.align-items-center
                          i.bi.bi-box-arrow-up-right.fs-5.me-2
                          span.d-block(th:text="#{_.logout}") Logout
                  div(sec:authorize="hasAnyRole('ROLE_MASTER_CLIENT', 'ROLE_SLAVE_CLIENT')")
                    li.border-top
                      a.dropdown-item(href="/profile/client.html" th:href="${lang_prefix} + @{/profile/client}")
                        .d-flex.align-items-center
                          i.bi.bi-person.fs-5.me-2
                          span.d-block(th:text="#{_.clientDetails}") Client details
                    li
                      a.dropdown-item(href="/profile/orders.html" th:href="${lang_prefix} + @{/profile/orders}")
                        .d-flex.align-items-center
                          i.bi.bi-person.fs-5.me-2
                          span.d-block(th:text="#{_.orderlist}") Orders
                    //li.border-top
                    //  a.dropdown-item(href="/profile/backorders.html" th:href="${lang_prefix} + @{/profile/backorders}")
                    //    .d-flex.align-items-center
                    //      i.bi.bi-person.fs-5.me-2
                    //      span.d-block(th:text="#{_.backorderlist}") Backorders
                    li
                      a.dropdown-item(href="/profile/garage.html" th:href="${lang_prefix} + @{/profile/garage}")
                        .d-flex.align-items-center
                          .d-flex.align-items-center.w-100
                            i.bi.bi-shop.fs-5.me-2
                            span.d-block(th:text="#{_.garage}") My cars
                          span.badge.bg-danger(th:classappend="${vehicle_count == 0 ? 'hidden': ''}" th:text="${vehicle_count}") 1
                  div(sec:authorize="isAuthenticated() && !hasAnyRole('ROLE_VISITOR', 'ROLE_STOCK_MANAGER', 'ROLE_SLAVE_CLIENT')")
                    li.border-top
                      a.dropdown-item(href="/profile/invite.html" th:href="${lang_prefix} + @{/invite}")
                        .d-flex.align-items-center
                          i.bi.bi-person.fs-5.me-2
                          span.d-block(th:text="#{_.generateInvitation}") Generate invitation
